/* ===== KeySet Orange Light Theme (Yandex Design System) ===== */
/* Основано на yandex-icon-pack-v1 + файл 44 */
/* Приглушенный амбер #FFB300 вместо яркого оранжевого */

/* === ДИЗАЙН-ТОКЕНЫ ЯНДЕКС === */
/* --ya-primary: #FFB300 (приглушённый амбер - акцент) */
/* --ya-accent: #FF3D00 (запасной акцент, редко) */
/* --ya-graphite: #EDEFF2 (текст/иконки по умолчанию) */
/* --ya-muted: #94A3B8 (вторичный текст/иконки) */
/* --bg: #0F1113 (фон) */
/* --bg-soft: #15181B (мягкие панели/журнал) */
/* --line: #2A2E34 (границы) */
/* --focus: #1A73E8 (фокус-обводка) */
/* --ok: #1E8E3E (успех) */
/* --warn: #B26A00 (предупреждение) */
/* --err: #D93025 (ошибка) */

/* === ГЛОБАЛЬНЫЕ СТИЛИ === */
* {
    font-family: "Inter", "Segoe UI Variable", "Segoe UI", Arial, sans-serif;
    font-size: 14px;
}

QMainWindow, QDialog, QWidget {
    background-color: #0F1113;
    color: #0F172A;
}

/* === ГРУППЫ (Group Box) === */
QGroupBox {
    background-color: #0F1113;
    border: 1px solid #E5E7EB;
    border-radius: 14px;
    margin-top: 16px;
    padding: 16px 16px 12px 16px;
    font-weight: 600;
    color: #0F172A;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    left: 12px;
    padding: 0 8px;
    color: #475569;
    background-color: #0F1113;
}

/* === ВКЛАДКИ (Tabs) === */
QTabWidget::pane {
    border: none;
    border-top: 2px solid #FFB300;
    background: #0F1113;
    border-radius: 0;
}

QTabBar::tab {
    background: #F7F8FA;
    color: #475569;
    padding: 10px 18px;
    border: 1px solid #E5E7EB;
    border-bottom: none;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    margin-right: 2px;
    font-weight: 500;
}

QTabBar::tab:selected {
    background: #0F1113;
    color: #0F172A;
    border-color: #FFB300;
    border-bottom: 2px solid #0F1113;
    font-weight: 600;
}

QTabBar::tab:hover:!selected {
    background: #FFF4EC;
    color: #FFB300;
}

/* === КНОПКИ (Buttons) - размеры из файла 44 === */
/* Button M (средняя): 40px высота, 12x8px padding, 20x20 иконки */
QPushButton {
    background-color: #FFB300;
    color: #FFFFFF;  /* Темный текст на светлом фоне - файл 44 */
    border: 1px solid #E39E00;
    border-radius: 8px;  /* 8px по спецификации файл 44 */
    padding: 0 12px;  /* Горизонтальные 12px - файл 44 */
    font-weight: 600;
    min-height: 40px;  /* Button M = 40px - файл 44 */
    max-height: 40px;
}

QPushButton:hover {
    background-color: #E39E00;
    border-color: #FFB300;
}

QPushButton:pressed {
    background-color: #FFC233;
}

QPushButton:disabled {
    background-color: #F1F5F9;
    color: #94A3B8;
    opacity: 0.5;
}

/* Button S (маленькая): 32px высота - файл 44 */
QPushButton[size="small"] {
    min-height: 32px;
    max-height: 32px;
    padding: 0 10px;
    font-size: 13px;
}

/* Вторичные кнопки (не primary) */
QPushButton[flat="true"] {
    background-color: #0F1113;
    color: #475569;
    border: 1px solid #2A2E34;
}

QPushButton[flat="true"]:hover {
    background-color: #0F1113;
    color: #EDEFF2;
    border-color: #FFB300;
}

/* === TOOL BUTTONS (IconButton в toolbar) === */
/* IconButton: 36px × 36px, 24x24 иконки - файл 44 */
QToolButton {
    background: transparent;
    border: 1px solid transparent;
    border-radius: 8px;
    padding: 6px;  /* 6px вокруг иконки - файл 44 */
    color: #475569;
    min-width: 36px;
    min-height: 36px;
    max-width: 36px;
    max-height: 36px;
}

QToolButton:hover {
    background: #0F1113;
    border-color: #FFB300;
}

QToolButton:checked {
    background: #FFE7D6;
    border: 1px solid #FFB300;
    color: #FFB300;
}

QToolButton:pressed {
    background: #FFD6B8;
}

/* === ПОЛЯ ВВОДА - размеры из файла 44 === */
/* Input: 40px высота, 12x8px padding, border-radius 8px */
QLineEdit {
    background-color: #0F1113;
    border: 1px solid #2A2E34;
    border-radius: 8px;
    padding: 0 12px;
    color: #EDEFF2;
    selection-background-color: #FFF4EC;
    selection-color: #EDEFF2;
    min-height: 40px;
    max-height: 40px;
}

QTextEdit, QPlainTextEdit {
    background-color: #0F1113;
    border: 1px solid #2A2E34;
    border-radius: 8px;
    padding: 8px 12px;
    color: #EDEFF2;
    selection-background-color: #FFF4EC;
    selection-color: #EDEFF2;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #FFB300;
    background-color: #0F1113;
}

QLineEdit::placeholder {
    color: #94A3B8;  /* --ya-muted из файла 44 */
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: #15181B;
    color: #94A3B8;
    border-color: #E5E7EB;
}

/* === COMBOBOX === */
QComboBox {
    background-color: #0F1113;
    border: 1px solid #E5E7EB;
    border-radius: 10px;
    padding: 8px 32px 8px 12px;
    color: #0F172A;
    min-height: 36px;
}

QComboBox:hover {
    border-color: #FFB300;
}

QComboBox:focus {
    border: 2px solid #FFB300;
}

QComboBox::drop-down {
    border: none;
    width: 32px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 6px solid #475569;
    margin-right: 8px;
}

QComboBox QAbstractItemView {
    background-color: #0F1113;
    border: 1px solid #E5E7EB;
    border-radius: 10px;
    padding: 4px;
    selection-background-color: #FFF4EC;
    selection-color: #0F172A;
}

/* === SPINBOX === */
QSpinBox, QDoubleSpinBox {
    background-color: #0F1113;
    border: 1px solid #E5E7EB;
    border-radius: 10px;
    padding: 8px 12px;
    color: #0F172A;
    min-height: 36px;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border: 2px solid #FFB300;
}

QSpinBox::up-button, QDoubleSpinBox::up-button,
QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: #F7F8FA;
    border: none;
    border-radius: 6px;
    width: 20px;
    margin: 2px;
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover,
QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover {
    background-color: #FFF4EC;
}

/* === ТАБЛИЦЫ === */
QTableWidget, QTreeView, QListView {
    background-color: #0F1113;
    alternate-background-color: #FAFAFB;
    gridline-color: #E5E7EB;
    border: 1px solid #E5E7EB;
    border-radius: 10px;
    selection-background-color: #FFF4EC;
    selection-color: #0F172A;
}

QTableWidget::item, QTreeView::item, QListView::item {
    padding: 6px 8px;
    border: none;
}

QTableWidget::item:selected, QTreeView::item:selected, QListView::item:selected {
    background-color: #FFF4EC;
    color: #0F172A;
}

QTableWidget::item:hover, QTreeView::item:hover, QListView::item:hover {
    background-color: #FFFBF7;
}

/* === ЗАГОЛОВКИ ТАБЛИЦ === */
QHeaderView::section {
    background-color: #F7F8FA;
    color: #475569;
    border: none;
    border-right: 1px solid #E5E7EB;
    border-bottom: 1px solid #E5E7EB;
    padding: 8px 12px;
    font-weight: 600;
    font-size: 13px;
}

QHeaderView::section:first {
    border-top-left-radius: 10px;
}

QHeaderView::section:last {
    border-top-right-radius: 10px;
    border-right: none;
}

QHeaderView::section:hover {
    background-color: #FFF4EC;
    color: #FFB300;
}

/* === СКРОЛЛБАРЫ === */
QScrollBar:vertical {
    background: transparent;
    width: 12px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: #CBD5E1;
    border-radius: 6px;
    min-height: 30px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background: #94A3B8;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0;
}

QScrollBar:horizontal {
    background: transparent;
    height: 12px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: #CBD5E1;
    border-radius: 6px;
    min-width: 30px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background: #94A3B8;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0;
}

/* === SPLITTER === */
QSplitter::handle {
    background-color: #E5E7EB;
    border-radius: 2px;
}

QSplitter::handle:vertical {
    height: 6px;
    margin: 2px 0;
}

QSplitter::handle:horizontal {
    width: 6px;
    margin: 0 2px;
}

QSplitter::handle:hover {
    background-color: #FFB300;
}

/* === CHECKBOX === */
QCheckBox {
    spacing: 8px;
    color: #0F172A;
}

QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #E5E7EB;
    border-radius: 6px;
    background-color: #0F1113;
}

QCheckBox::indicator:hover {
    border-color: #FFB300;
}

QCheckBox::indicator:checked {
    background-color: #FFB300;
    border-color: #FFB300;
    image: none;
}

QCheckBox::indicator:checked:hover {
    background-color: #E39E00;
}

/* === RADIO BUTTON === */
QRadioButton {
    spacing: 8px;
    color: #0F172A;
}

QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #E5E7EB;
    border-radius: 10px;
    background-color: #0F1113;
}

QRadioButton::indicator:hover {
    border-color: #FFB300;
}

QRadioButton::indicator:checked {
    background-color: #0F1113;
    border: 6px solid #FFB300;
}

/* === PROGRESS BAR === */
QProgressBar {
    background-color: #F7F8FA;
    border: 1px solid #E5E7EB;
    border-radius: 10px;
    text-align: center;
    color: #475569;
    font-weight: 600;
    min-height: 24px;
}

QProgressBar::chunk {
    background-color: #FFB300;
    border-radius: 9px;
}

/* === MENU BAR === */
QMenuBar {
    background-color: #0F1113;
    color: #0F172A;
    border-bottom: 1px solid #E5E7EB;
    padding: 4px;
}

QMenuBar::item {
    padding: 6px 12px;
    border-radius: 6px;
    background: transparent;
}

QMenuBar::item:selected {
    background-color: #FFF4EC;
    color: #FFB300;
}

QMenuBar::item:pressed {
    background-color: #FFE7D6;
}

/* === MENU === */
QMenu {
    background-color: #0F1113;
    border: 1px solid #E5E7EB;
    border-radius: 10px;
    padding: 6px;
    color: #0F172A;
}

QMenu::item {
    padding: 8px 32px 8px 12px;
    border-radius: 6px;
    margin: 2px;
}

QMenu::item:selected {
    background-color: #FFF4EC;
    color: #FFB300;
}

QMenu::separator {
    height: 1px;
    background: #E5E7EB;
    margin: 6px 12px;
}

/* === TOOLBAR === */
QToolBar {
    background: #0F1113;
    border: none;
    border-bottom: 1px solid #E5E7EB;
    spacing: 8px;
    padding: 8px;
}

QToolBar::separator {
    background: #E5E7EB;
    width: 1px;
    margin: 4px 8px;
}

/* === STATUS BAR === */
QStatusBar {
    background: #F7F8FA;
    color: #475569;
    border-top: 1px solid #E5E7EB;
}

/* === LABEL === */
QLabel {
    color: #0F172A;
    background: transparent;
}

/* === TOOLTIP === */
QToolTip {
    background-color: #0F172A;
    color: #0F1113;
    border: none;
    border-radius: 8px;
    padding: 8px 12px;
    font-size: 13px;
}

/* === MESSAGE BOX === */
QMessageBox {
    background-color: #0F1113;
}

QMessageBox QPushButton {
    min-width: 80px;
}

/* === СТАТУСНЫЕ МЕТКИ (используй через setProperty("status", "ok")) === */
QLabel[status="ok"] {
    background-color: #E8F5E9;
    color: #16A34A;
    border-radius: 10px;
    padding: 4px 12px;
    font-weight: 600;
}

QLabel[status="fail"] {
    background-color: #FDE8E8;
    color: #DC2626;
    border-radius: 10px;
    padding: 4px 12px;
    font-weight: 600;
}

QLabel[status="warn"] {
    background-color: #FEF3C7;
    color: #B45309;
    border-radius: 10px;
    padding: 4px 12px;
    font-weight: 600;
}

QLabel[status="info"] {
    background-color: #E6F0FF;
    color: #2563EB;
    border-radius: 10px;
    padding: 4px 12px;
    font-weight: 600;
}

/* === DIALOG BUTTON BOX === */
QDialogButtonBox QPushButton {
    min-width: 90px;
}

/* === LOG WIDGET (QPlainTextEdit) === */
QPlainTextEdit#log_widget {
    background-color: #FAFAFA;
    border: 1px solid #E5E7EB;
    border-radius: 10px;
    font-family: "JetBrains Mono", "Cascadia Code", "Consolas", monospace;
    font-size: 13px;
    color: #0F172A;
    padding: 8px;
}
